
@{
    ViewBag.Title = "DemoLanding";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BugTrakker | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="~/Content/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Ionicons -->
    <link href="~/Content/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />

    <!-- iCheck -->
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>MyCo </b>BugTrakker
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Choose a demo user to start your session</p>

            <div class="row">
                <div class="col-md-offset-1 col-md-4">
                    <a href="#" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#demoAdmin">
                        Admin Privileges
                    </a>
                </div>
                <div class="col-md-offset-2 col-md-4">
                    <a href="#" class="btn btn-lg btn-success" data-toggle="modal" data-target="#demoPM">
                        Project Manager Privileges
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-1 col-md-4">
                    <a href="#" class="btn btn-lg btn-warning" data-toggle="modal" data-target="#demoDev">
                        Developer Privileges
                    </a>
                </div>
                <div class="col-md-offset-2 col-md-4">
                    <a href="#" class="btn btn-lg btn-danger" data-toggle="modal" data-target="#demoSub">
                        Submitter Privileges
                    </a>
                </div>
            </div>


            <!-- Modal -->
            <div id="demoAdmin" class="modal fade" data-focus-on="input:first" role="dialog">
                <div class="modal-dialog">

                    <!-- Admin Modal content-->
                    <div class="modal-content modal-lg">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Administrator Privileges</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12 text-center h4">

                                    <h4>An Administrator can:</h4>
                                    <ul>
                                        <li>1</li>
                                        <li>2</li>
                                        <li>3</li>
                                        <li>4</li>
                                    </ul>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("key", "DemoAdmin")
                                        <button type="submit" class="btn btn-info">Login as DemoAdmin</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

