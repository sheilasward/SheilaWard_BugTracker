
@{
    ViewBag.Title = "DemoLanding";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BugTrakker | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="~/Content/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Ionicons -->
    <link href="~/Content/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />

    <!-- iCheck -->
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="demo-user-box">
        <div class="login-logo">
            <b>MyCo </b>BugTrakker
        </div>
        <!-- /.login-logo -->
        <div class="demo-user-box-body" >
            <h2 class="login-box-msg">Choose a demo user to start your session</h2>
            <div class="row" style="margin:0 100px;">


                <!-- Begin Demo Admin Box -->
                <div class="col-lg-6 text-center">
                    <div class="box box-danger box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title">Demo Administrator Role</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <img src="~/Avatars/kartunix(1).png" class="img-responsive" />
                                </div>
                                <div class="col-sm-8 text-left">
                                    <h4>Privileges:</h4>
                                    <ul>
                                        <li>Has highest privileges.</li>
                                        <li>Can do everything except create tickets.</li>
                                        <li>Automatically added to every project.</li>
                                        <li>Only one who can assign a user to a role.</li>
                                        <li>Only one who can see all notifications.</li>
                                    </ul>

                                </div>
                            </div>
                        </div>
                        <div>
                            @using (Html.BeginForm("Login", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("key", "DemoAdmin")
                                <button class="btn btn-sm btn-danger" type="submit">
                                    Sign in as Demo Administrator
                                </button>
                            }
                        </div>
                        <br />
                    </div>
                </div>

                <!-- Begin Demo Submitter Box -->
                <div class="col-lg-6 text-center">
                    <div class="box box-success box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title">Demo Submitter Role</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <img src="~/Avatars/kartunix(3).png" class="img-responsive" />
                                </div>
                                <div class="col-sm-8 text-left">
                                    <h4>Privileges:</h4>
                                    <ul>
                                        <li>Process begins with the Submitter.</li>
                                        <li>Is the only one who can create a ticket.</li>
                                        <li>Only creates tickets for projects he/she is on.</li>
                                        <li>Is the "Owner" of every ticket he/she creates.</li>
                                        <li>Notifies Project Manager(s) of the new ticket.</li>
                                    </ul>

                                </div>
                            </div>
                        </div>
                        <div>
                            @using (Html.BeginForm("Login", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("key", "DemoSubmitter")
                                <button class="btn btn-sm btn-success" type="submit">
                                    Sign in as Demo Submitter
                                </button>
                            }
                        </div>
                        <br />
                    </div>
                </div>

                <!-- Begin Demo Project Manager Box -->
                <div class="col-lg-6 text-center">
                    <div class="box box-primary box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title">Demo Project Manager Role</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <img src="~/Avatars/kartunix(2).png" class="img-responsive" />
                                </div>
                                <div class="col-sm-8 text-left">
                                    <h4>Privileges:</h4>
                                    <ul>
                                        <li>Receives notification of a new ticket.</li>
                                        <li>Assigns tickets to Developers on his/her projects.</li>
                                        <li>Has many of the same privileges as Administrator.</li>
                                        <li>Scope of privileges limited to his/her projects.</li>
                                        <li>Archives Projects and Tickets when complete.</li>
                                    </ul>

                                </div>
                            </div>
                        </div>
                        <div>
                            @using (Html.BeginForm("Login", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("key", "DemoProjectManager")
                                <button class="btn btn-sm btn-primary" type="submit">
                                    Sign in as Demo Project Manager
                                </button>
                            }
                        </div>
                        <br />
                    </div>
                </div>

                <!-- Begin Demo Developer Box -->
                <div class="col-lg-6 text-center">
                    <div class="box box-warning box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title">Demo Developer Role</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <img src="~/Avatars/kartunix(4).png" class="img-responsive" />
                                </div>
                                <div class="col-sm-8 text-left">
                                    <h4>Privileges:</h4>
                                    <ul>
                                        <li>Does coding and testing on tickets.</li>
                                        <li>Responsible for updating "% Done" on each ticket.</li>
                                        <li>Sends notification to Project Manager when ticket complete.</li>
                                        <li>Scope of privileges limited to his/her tickets.</li>
                                        <li>Reports to the Project Manager(s) who assigned the tickets.</li>
                                    </ul>

                                </div>
                            </div>
                        </div>
                        <div>
                            @using (Html.BeginForm("Login", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("key", "DemoDeveloper")
                                <button class="btn btn-sm btn-warning" type="submit">
                                    Sign in as Demo Developer
                                </button>
                            }
                        </div>
                        <br />
                    </div>
                </div>



                @*<div class="row">
            <div class="col-md-offset-1 col-md-4">
                <a href="#" class="btn btn-lg btn-warning" data-toggle="modal" data-target="#demoDev">
                    Developer Privileges
                </a>
            </div>
            <div class="col-md-offset-2 col-md-4">
                <a href="#" class="btn btn-lg btn-danger" data-toggle="modal" data-target="#demoSub">
                    Submitter Privileges
                </a>
            </div>
        </div>*@


                <!-- Modal -->
                <div id="demoAdmin" class="modal fade" data-focus-on="input:first" role="dialog">
                    <div class="modal-dialog">

                        <!-- Admin Modal content-->
                        <div class="modal-content modal-lg">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Administrator Privileges</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12 text-center h4">

                                        <h4>An Administrator can:</h4>
                                        <ul>
                                            <li>1</li>
                                            <li>2</li>
                                            <li>3</li>
                                            <li>4</li>
                                        </ul>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("key", "DemoAdmin")
                                            <button type="submit" class="btn btn-info">Login as DemoAdmin</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
</body>
</html>

