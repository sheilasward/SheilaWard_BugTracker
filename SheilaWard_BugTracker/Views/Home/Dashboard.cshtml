                    data: response,
                    gridTextSize: 10,
                    xLabelAngle: 65,
                    xkey: 'label',
                    ykeys: ['value'],
                    labels: ['Ticket Count'],
                    resize: true
                });
            });
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $.post('@Url.Action("GetRealMorrisData", "Charts")').then(function (response) {
                new Morris.Donut({
                    element: 'RealMorrisDonutChart',
