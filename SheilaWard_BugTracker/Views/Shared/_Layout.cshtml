        <!-- Bootstrap WYSIHTML5 -->
        <script src="~/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>

        <!-- SlimScroll -->
        <script src="~/Content/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>

