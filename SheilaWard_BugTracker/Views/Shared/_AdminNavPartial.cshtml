    <ul id="sidebar-items" class="sidebar-menu" data-widget="tree">
        <li class="header">ADMINISTRATOR NAVIGATION</li>
        <li class="current">
            <a href="@Url.Action("Dashboard", "Home")">
                <i class="fa fa-dashboard"></i> <span>Dashboard</span>
            </a>
        </li>

        <li><hr /></li>

        <li><a href="@Url.Action("UserIndex", "Admin")"><i class="fa fa-user"></i> User Index</a></li>
        <li><a href="@Url.Action("ManageProjects", "Projects")"><i class="fa fa-user"></i> Assign Users to Projects</a></li>
        <li><hr /></li>

        <li><a href="@Url.Action("Create", "Projects")"><i class="fa fa-book"></i> Create New Project</a></li>
        <li>
            <a href="@Url.Action("Index", "Projects", new { proj = "MyProjects" })">
                <i class="fa fa-book"></i>
                <span>View/Manage Projects</span>
                <span class="pull-right-container">
                    <small data-toggle="tooltip" title="All My Projects" class="label pull-right bg-white">@projectHelper.CountUserProjects()</small>
                </span>
            </a>
        </li>
        <li><hr /></li>

        <li>
            <a href="#">
                <i class="fa fa-bug"></i>
                <span> View/Manage Tickets</span>
            </a>
        </li>

        <li>
            <a href="@Url.Action("Index", "Tickets", new { proj = "MyTickets", stat = "All"})">
                <span>&emsp;</span>
                <i class="fa fa-circle-o"></i>
                <span> All</span>
                <span class="pull-right-container">
                    <small data-toggle="tooltip" title="All My Tickets" class="label pull-right bg-white">@ticketHelper.GetTicketCount("All")</small>
                </span>
            </a>
        </li>

        <li>
            <a href="@Url.Action("Index", "Tickets", new { proj = "MyTickets", stat = "InProg"})">
                <span>&emsp;</span>
                <i class="fa fa-circle-o"></i>
                <span> In Progress</span>
                <span class="pull-right-container">
                    <small data-toggle="tooltip" title="New/Unassigned" class="label pull-right bg-yellow">@ticketHelper.GetTicketCount("New/Unassigned")</small>
                    <small data-toggle="tooltip" title="Active/Assigned" class="label pull-right bg-green">@ticketHelper.GetTicketCount("Active/Assigned")</small>
                </span>
            </a>
        </li>

        <li>
            <a href="@Url.Action("Index", "Tickets", new { proj = "MyTickets", stat = "Completed" })">
                <span>&emsp;</span>
                <i class="fa fa-circle-o"></i>
                <span>Not Active</span>
                <span class="pull-right-container">
                    <small data-toggle="tooltip" title="Inactive" class="label pull-right bg-purple">@ticketHelper.GetTicketCount("Inactive")</small>
                    <small data-toggle="tooltip" title="Completed" class="label pull-right bg-red">@ticketHelper.GetTicketCount("Completed")</small>
                    <small data-toggle="tooltip" title="Archived" class="label pull-right bg-blue">@ticketHelper.GetTicketCount("Archived")</small>
                </span>
            </a>
        </li>

        <li><hr /></li>

        <li>
            <a href="@Url.Action("MyNotifications", "TicketNotifications")">
                <i class="fa fa-bell-o"></i>
                <span>My Notifications</span>
                <span class="pull-right-container">
                    <small data-toggle="tooltip" title="All Notifications" class="label pull-right bg-white">@notfHelper.GetAllUserNotificationCount()</small>
                    <small data-toggle="tooltip" title="Read Notifications" class="label pull-right bg-green">@notfHelper.GetReadUserNotificationCount()</small>
                    <small data-toggle="tooltip" title="Unread Notifications" class="label pull-right bg-yellow">@notfHelper.GetNewUserNotificationCount()</small>
                </span>
            </a>
        </li>
        <li><a href="@Url.Action("Index", "TicketNotifications")"><i class="fa fa-bell-o"></i> All Notifications</a></li>

        <li><hr /></li>

        <li><a href="@Url.Action("Index", "TicketHistories")"><i class="fa fa-history"></i> Ticket Histories</a></li>
        <li><a href="@Url.Action("Index", "TicketComments")"><i class="fa fa-comment"></i> Ticket Comments</a></li>
        <li><a href="@Url.Action("Index", "TicketAttachments")"><i class="fa fa-paperclip"></i> Ticket Attachments</a></li>
